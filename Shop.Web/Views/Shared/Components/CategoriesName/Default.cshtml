@using Microsoft.AspNetCore.Identity;
@using Shop.Data.Models;
@inject UserManager<ApplicationUser> UserManager

@if (User.IsInRole("Admin"))
{
    @foreach (var category in ViewBag.Categories.CategoryListName)
    {
        <a class="dropdown-item" asp-controller="Category" asp-action="Topic" asp-route-id="@category.Id">@category.Name</a>
    }
}
else
{
    @foreach (var category in ViewBag.Categories.CategoryListName)
    {
        if (category.IsVisible)
        {
            <a class="dropdown-item" asp-controller="Category" asp-action="Topic" asp-route-id="@category.Id">@category.Name</a>
        }
    }

}


